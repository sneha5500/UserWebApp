@model UserWebApp.Models.User

@{
    ViewData["Title"] = "Details";
}

<h2>User Details</h2>
<hr />
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Place</dt>
    <dd class="col-sm-10">@Model.Place</dd>

    <dt class="col-sm-2">Gender</dt>
    <dd class="col-sm-10">@Model.Gender</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Phone</dt>
    <dd class="col-sm-10">@Model.Phone</dd>

    <dt class="col-sm-2">Date of Birth</dt>
    <dd class="col-sm-10">@Model.DateOfBirth?.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-2">Registered On</dt>
    <dd class="col-sm-10">@Model.RegisteredOn.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-2">Profile Picture</dt>
    <dd class="col-sm-10">
        @if (!string.IsNullOrEmpty(Model.ProfilePicturePath))
        {
            <img src="@Model.ProfilePicturePath" alt="Profile" style="max-width: 150px;" />
        }
        else
        {
            <span>No profile picture uploaded.</span>
        }
    </dd>

    <dt class="col-sm-2">Location</dt>
    <dd class="col-sm-10">
        @if (Model.Latitude.HasValue && Model.Longitude.HasValue)
        {
            <div id="map" style="height: 300px;"></div>
        }
        else
        {
            <span>Location not available.</span>
        }
    </dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
<a asp-action="Index">Back to List</a>

@section Scripts {
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

    @if (Model.Latitude.HasValue && Model.Longitude.HasValue)
    {
        <script>
            var map = L.map('map').setView([@Model.Latitude, @Model.Longitude], 15);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png').addTo(map);
            L.marker([@Model.Latitude, @Model.Longitude], {
                icon: L.icon({
                    iconUrl: 'https://maps.gstatic.com/mapfiles/ms2/micons/red-dot.png',
                    iconSize: [32, 32],
                    iconAnchor: [16, 32]
                })
            }).addTo(map).bindPopup('Location');
        </script>
    }
}
